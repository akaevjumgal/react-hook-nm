{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@views/*": ["views/*"],
      "@models/*": ["models/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}
